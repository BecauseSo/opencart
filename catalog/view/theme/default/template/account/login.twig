{{ header }}
<style>
  #content{
    text-align: center;
  }
  .btn-primary{
    margin: 20px 0;
  }
  .grid__item{
    padding-right: 15px;
  }
  .section-header{
    margin-bottom: 50px;
  }
  .alert-danger{
    text-align: center;
  }
</style>
<div id="account-login" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
  {% endif %}
  {% if error_warning %}
  <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
  {% endif %}
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <div class="row">
        <div class="col-sm-6">
          <div class="grid__item large--one-third push--large--one-third text-center">
            <h2>Login</h2>
            <hr class="hr--small section-header"/>
            <form action="{{ action }}" method="post" enctype="multipart/form-data">
              <div class="form-group">
                <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control input-full" />
              </div>
              <div class="form-group">
                <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control input-full" />
              </div>
              <div class="form-group">
                <input type="submit" value="SIGN IN" class="btn btn-primary input-full" />
              </div>
              {% if redirect %}
                <input type="hidden" name="redirect" value="{{ redirect }}" />
              {% endif %}
            </form>
            <div class="section-header">
              <p><a href="/index.php?route=account/register">Create Account</a></p>
              <p><a href="/">Return to Store</a></p>
              <p><a href="{{ forgotten }}">Forgot your password?</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }}