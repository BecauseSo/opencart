{{ header }}
<style>
  .section-header{
    margin-bottom: 50px;
  }
  .grid__item{
    padding-right: 15px;
  }
</style>
<div id="common-success" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    {#<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>#}
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="grid__item large--one-third push--large--one-third text-center">{{ content_top }}
      <h1>{{ heading_title }}</h1>
      <hr class="hr--small section-header"/>
      {{ text_message }}
      <div class="buttons section-header">
        <div{# class="pull-right"#}><a href="{{ continue }}" class="btn btn-primary input-full">{{ button_continue }}</a></div>
      </div>
      <div class="grid__item text-center">
        {#{{ content_bottom }}
        {{ column_right }}#}
      </div>
    </div>
  </div>
</div>
{{ footer }}